@{
    ViewBag.Title = "MoneyNow - Currency Converter";
}
@section featured {}

@section styles
{
    <link rel="stylesheet" href="~/Content/select2.css" />
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/select2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.xdomainajax.js"></script>
    <script type="text/javascript" src="~/Scripts/Controllers/moneynow.controllers.js"></script>

    <script type="text/javascript">

        var format = function (state) {
            if (state.id && state.element) {
                var url = $(state.element).data("flagurl");
                return "<img width='25' src='" + url + "'> " + state.text;
            }

            return false;
        };

        $(document).ready(function () {
            $("#ddlFrom").select2({
                placeholder: 'Select origin currency',
                formatResult: format,
                formatSelection: format
            });

            $("#ddlTo").select2({
                placeholder: 'Select result currency',
                formatResult: format,
                formatSelection: format
            });
        });

    </script>
}

<div class="container-narrow">

    <div class="appWrapper" ng-controller="MoneyNowController">
        <form class="form-moneynow" ng-submit="convert()">
            <h2 class="form-moneynow-heading">MONEYNOW CONVERTER</h2>

            <div class="well">
                <div class="control-group">
                    <label for="txtAmount">Amount</label>
                    <input id="txtAmount" ng-model="amount" type="number" class="input-block-level"
                        placeholder="Amount to be converted" />
                </div>
                <div class="control-group">
                    <label for="ddlFrom">From</label>
                    <select
                        id="ddlFrom"
                        ng-model="from"
                        class="input-block-level" title="Origin Currency">
                        <option ng-repeat="currency in currencies" value="{{currency.isoCurrencySymbol}}" data-flagurl="{{currency.flagUrl}}">{{currency.currencyEnglishName}}
                            ({{currency.isoCurrencySymbol}})
                        </option>
                    </select>
                </div>
                <div class="control-group">
                    <label for="ddlTo">To</label>
                    <select
                        id="ddlTo"
                        ng-model="to"
                        class="input-block-level" title="Result Currency">
                        <option ng-repeat="currency in currencies" value="{{currency.isoCurrencySymbol}}" data-flagurl="{{currency.flagUrl}}">{{currency.currencyEnglishName}}
                            ({{currency.isoCurrencySymbol}})
                        </option>
                    </select>
                </div>

            </div>
            <button class="btn btn-large btn-block btn-primary" type="submit">Get Conversion</button>
            <br>

            <div>
                <div id="result" class="alert alert-success alert-block"></div>
            </div>

        </form>
    </div>

</div>

