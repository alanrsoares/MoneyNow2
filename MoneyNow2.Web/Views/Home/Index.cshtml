@{
    ViewBag.Title = "MoneyNow - Currency Converter";
}
@section featured {}

@section styles
{
    <link rel="stylesheet" href="~/Content/select2.css" />

    <style type="text/css">
        #result {
            font-size: xx-large;
            text-align: center;
        }

        #social {
            height: 20px;
        }

            #social ul li {
                padding-right: 10px;
                width: 30%;
            }
    </style>
}

@section scripts
{
    <div id="fb-root"></div>

    <script type="text/javascript" src="~/Scripts/select2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-resource.js"></script>
    <script type="text/javascript" src="~/App/Services/moneynow.services.js"></script>
    <script type="text/javascript" src="~/App/Controllers/moneynow.controllers.js"></script>

    <script type="text/javascript">
        //#region Social
        //Google's +1
        (function () {
            var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
            po.src = 'https://apis.google.com/js/plusone.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
        })();
        //Facebook Like
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=226641894132932";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
        //Twitter share
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (!d.getElementById(id)) {
                js = d.createElement(s);
                js.id = id;
                js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs);
            }
        }(document, "script", "twitter-wjs"));
        //#endregion
    </script>
}

<div class="container-narrow">

    <div ng-controller="MoneyNowController">
        <form ng-submit="convert()">
            <h2>MONEYNOW CONVERTER</h2>

            <div class="well">

                <div class="control-group">
                    <label for="txtAmount">Amount</label>
                    <input id="txtAmount" ng-model="amount" type="number" min="1" class="input-block-level"
                        placeholder="Amount to be converted" />
                </div>

                <div class="control-group">
                    <label for="ddlFrom">From</label>
                    <input id="ddlFrom" ui-select2="currencies" ng-model="from" data-placeholder="Select origin currency" class="input-block-level" />
                </div>

                <div class="control-group">
                    <label for="ddlTo">To</label>
                    <input id="ddlTo" ui-select2="currencies" ng-model="to" data-placeholder="Select destination currency" class="input-block-level" />
                </div>

                <div class="control-group">
                    <button class="btn btn-info btn-small btn-block" ng-click="switch()">
                        <strong>SWITCH SELECTION</strong>
                    </button>
                </div>

            </div>

            <div class="accordion">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle">And your result is...
                        </a>
                    </div>
                    <div id="result" class="alert-info alert-block collapse in" ng-show="showResult">
                        {{currencySymbol}} {{result}}
                    </div>
                </div>
            </div>

        </form>

        <div id="social" class="well well-small">
            <ul class="nav nav-pills">
                <li>
                    <div class="fb-like" data-href="http://moneynow2.apphb.com" data-send="false" data-layout="button_count" data-show-faces="false"></div>
                </li>
                <li>
                    <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://moneynow2.apphb.com">Tweet</a>
                </li>
                <li>
                    <div class="g-plusone pull-left" data-size="medium" data-href="http://moneynow2.apphb.com"></div>
                </li>
            </ul>
        </div>
    </div>

</div>
